<div class="user-meta">
  <%= image_tag 'hermes-logo.png', class: 'logo' %>

  <h3>Hermes</h3>

  <h4>Forgot your password?</h4>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <div class="controls">
        <%= f.email_field :email, :autofocus => true, placeholder: 'email...', class: 'input-block-level' %>
      </div>
    </div>

    <%= f.button "Send reset password link", class: "btn input-block-level" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
