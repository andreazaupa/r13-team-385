<h3>
  <%= title @site.name, 'Tips' %>
  <%= link_to 'Create a new tip', new_site_tip_path(@site), class: 'btn btn-small', style: 'float: right' %>
</h3>

<% if @tips.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Tip Title</th>
        <th>Visible From</th>
        <th>Visible Until</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="tips-list">
      <%= render @tips %>
    </tbody>
  </table>
<% else %>
  <div class="hero-unit" style="padding: 30px 60px; text-align: center">
    <h3>No tips for this site yet!</h3>
    <p>
      Start adding message to your site clicking the button below.
    </p>
    <hr>
    <p>
      <%= link_to "Add a tip to your site!", new_site_tip_path(@site), class: 'btn btn-primary btn-large' %>
    </p>
  </div>
<% end %>

<script>
  $('#tips-list').sortable({
    handle: '.icon-reorder',
    update: function(event, ui) {
      var pos = $('#tips-list').find('tr').index(ui.item);
      $.ajax("/tips/" + ui.item.attr('data-id') + '/position', {
        data: { pos: pos },
        type: 'put',
        success: function() {
        }
      });
    }
  });
</script>
