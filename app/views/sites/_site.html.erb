<li id="<%= dom_id(site) %>">
  <span class="actions">
    <%= link_to edit_site_path(site), remote: true, class: 'btn btn-mini edit' do %>
      <i class="icon-pencil"></i>
    <% end %>
    <%= link_to site_path(site), method: :delete, remote: true, class: 'btn btn-mini remove', title: 'Are you sure?', confirm: 'This action will remove your site.'  do %>
      <i class="icon-remove"></i>
    <% end %>
  </span>
  <%= link_to site_tips_path(site) do |link| %>
    <i class="icon-list-alt"></i> <b><%= site.name %></b>
    <% if site.tips.any? %>
      <span class="label"><%= site.tips.count %></span>
    <% end %>
    <br>
  <% end %>
  <small>
    <%# link_to site_tutorials_path(site) do %>
      <!--span class="label"><%= pluralize(site.tutorials.count, 'tutorials') %></span-->
    <%# end %>
  </small>
</li>
<li class="divider"></li>
