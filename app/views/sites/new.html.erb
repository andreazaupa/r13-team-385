<h1>New site</h1>

<%= form_for @site do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :hostname %>
    <%= f.text_field :hostname %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit 'Save!' %>
  </div>

<% end %>
